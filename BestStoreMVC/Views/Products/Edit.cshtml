@model ProductDto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label"></label>
                            <input asp-for="Brand" class="form-control" placeholder="Ingrese la marca del producto" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <div class="col-sm-8">
                                <select class="form-select" asp-for="Category">
                                    <option value='Other'>Other</option>
                                    <option value='Phones'>Phones</option>
                                    <option value='Computers'>Computers</option>
                                    <option value='Tablets'>Tablets</option>
                                    <option value='Accessories'>Accessories</option>
                                    <option value='Smartwatches'>Smartwatches</option>
                                    <option value='SmartTVs'>SmartTVs</option>
                                    <option value='SmartSpeakers'>SmartSpeakers</option>
                                    <option value='SmartHome'>SmartHome</option>
                                </select>
                            </div>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Ingrese el precio del producto" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Ingrese una descripción del producto"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div>
                                <img src="/Products/@ViewData["ImageFileName"]" alt="Imagen del producto" class="img-thumbnail" style="max-width: 200px;" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Actualizar Imagen (opcional)</label>
                            <input asp-for="ImageFile" class="form-control" type="file" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
